/* Full-Width Container Hack */
.container-full
	padding 0 15px
	margin-left 0
	margin-right 0
	background-color minblue

	// this may be a temporary solution


/* TYPOGRAPHY ////////////////////////// */

h1, h2, h3, h4, h5, h6
	font-family open
	font-weight light
	color darkblue
	margin 0

	a
		color #333

h1
	font-size 28px
	line-height 1.2
h2
	font-size 26px
h3
	font-size 24px
	color darkblue
h4
	font-size 22px
h5
	font-size 20px
h6
	font-size 18px
	color darkblue

p
	color #4d6473
	line-height 1.7
	font-size 14px
	margin 15px 0 0 0
	font-weight light

	&.cln
		margin 0

	&.small
		font-size 13px
		line-height 1.5

