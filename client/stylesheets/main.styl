/* 
 * MISCELLANEOUS STYLES
 *
 * Includes easy centering, full width dividers (light and regular), spacer
 * helper classes, and liners for adding padding to columns without breaking
 * the bootstrap grid.
 *
 */

// easy center
.center
	text-align center
	margin auto

// fullwidth divider
.fullwidthline
	background-color #e4ecf0
	height 1px
	width 100%

	&.dark
		background-color #dde5e8


// spacers
hr
	clear both
	border-style none
	height 1px
	margin 0
	display block

spacer(n)
	height n

	&.nomob
		@media handheld, screen and (max-width: 768px)
			display none

	&.notab
		@media handheld, screen and (max-width: 992px)
			display none

	&.mobonly
		display none
		
		@media handheld, screen and (max-width: 768px)
			display block

hr.spacer5
	spacer(5px)

hr.spacer10
	spacer(10px)

hr.spacer20
	spacer(20px)

hr.spacer30
	spacer(30px)

hr.spacer40
	spacer(40px)

hr.spacer50
	spacer(50px)

hr.spacer60
	spacer(60px)

// liners
.liner
	padding 20px

	&.big
		padding 30px

	&.noleft
		padding-left 0

	&.noright
		padding-right 0

	&.notop
		padding-top 0

	&.nobottom
		padding-bottom 0

	&.mobile-friendly
		// everything over 768px (tablet screens)
		@media handheld, screen and (max-width: 768px)
			padding 5px

		// everything over 768px (tablet screens)
		@media handheld, screen and (max-width: 992px)
			padding 10px



